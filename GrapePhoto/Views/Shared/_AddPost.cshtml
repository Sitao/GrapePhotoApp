 
@{
    Layout = null;
   
}
<button type="button" data-toggle="modal" data-target="#exampleModalLong" class="btn btn-lg btn-pill  btn-info"><i class="fe fe-image mr-2"></i> Add Post </button>
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Add Post</h5>
            </div>
            <div class="modal-body">
                <form id="addPostForm" method="post">
                    <div class="form-group">
                        <label class="form-label">Comments</label>
                        <textarea rows="3" class="form-control"  name="comments"  placeholder="Here can be your description" value="Mike" style="margin-top: 0px; margin-bottom: 0px; height: 165px;"></textarea>
          
                    </div>
                    <div class="form-group">
                        <div class="form-label">Choose your Photo:</div>
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" name="qqfile" onchange="previewImage(this,[1000],4);">
                            <label class="custom-file-label"></label>
                            <div class="imagePreview"></div>
                        </div>
                    </div>
                    <div class="col-6 col-sm-4">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-lg btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-lg btn-primary btn-post disabled" disabled="disabled"><i class="fe fe-upload mr-2"></i>Post</button>
            </div>
        </div>
    </div>
</div>

<script>
        require(['jquery'], function () {
            $(document).ready(function () {
                $('.btn-post').click(function () {
                    console.log("adding post.");
                    var formData = new FormData($("#addPostForm")[0]);
                    $.ajax({
                        method: 'post',
                        url: 'Common/AsyncUpload',
                        data: formData,
                        processData: false,
                        contentType: false,
                        success: function (data) {

                        }
                    });

                });
            });
        });
</script>