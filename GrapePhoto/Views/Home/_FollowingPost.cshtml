@model GrapePhoto.Models.PostViewModel
@{
    Layout = null;
}
<div class="card parent-magnific-popup">
    <a href="@Model.Picture.Src"><img class="card-img-top" src="@Model.Picture.ThumbnailSrc" alt="And this isn&#39;t my nose. This is a false one."></a>
    <div class="card-body d-flex flex-column">
        <h4>@Model.Picture.TitleAttribute</h4>
        <div class="d-flex align-items-center pt-5 mt-auto">
            <div class="avatar avatar-md mr-3" style="background-image: url('@Model.User.AvatarPicUrl')"></div>
            <div>
                <a href="@Url.Action("Index","Profile", new { id = Model.User.Id})" class="text-default">@Model.User.UserName</a>
                <small class="d-block text-muted">3 days ago</small>
            </div>
            <div class="ml-auto text-muted">
                <a href="#" class="icon d-none d-md-inline-block ml-3"><i class="fe fe-heart mr-1"></i></a>
            </div>
        </div>
    </div>
</div>

 